/* pages/diagnosis/diagnosis.wxss */
.page {
  min-height: 100vh;
  background: linear-gradient(135deg, #a855f7 0%, #9333ea 50%, #3b82f6 100%);
  padding-bottom: 40rpx;
}

.gradient-bg {
  background: linear-gradient(135deg, #a855f7 0%, #9333ea 50%, #3b82f6 100%);
}

/* Â§¥ÈÉ® */
.header {
  padding: 96rpx 40rpx 48rpx;
}

.header-top {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.back-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(16rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.back-icon {
  color: #ffffff;
  font-size: 40rpx;
  font-weight: 600;
  letter-spacing: -0.02em;
}

.header-content {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.header-title {
  color: #ffffff;
  font-size: 40rpx;
  font-weight: 600;
  letter-spacing: -0.01em;
  margin-bottom: 8rpx;
}

.header-subtitle {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

.content {
  padding: 0 40rpx;
  margin-top: -32rpx;
}

/* ‰∏ä‰º†Âå∫Âüü */
.upload-section {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.upload-card {
  background: #ffffff;
  border-radius: 48rpx;
  padding: 64rpx 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  text-align: center;
  border: 4rpx dashed #e5e7eb;
}

.upload-icon {
  width: 192rpx;
  height: 192rpx;
  background: linear-gradient(135deg, #e9d5ff 0%, #dbeafe 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 32rpx;
  position: relative;
}

.upload-symbol {
  width: 96rpx;
  height: 96rpx;
  position: relative;
}

.upload-arrow {
  width: 0;
  height: 0;
  border-left: 18rpx solid transparent;
  border-right: 18rpx solid transparent;
  border-bottom: 32rpx solid #9333ea;
  position: absolute;
  top: 0;
  left: 30rpx;
}

.upload-arrow::after {
  content: '';
  width: 12rpx;
  height: 36rpx;
  background: #9333ea;
  position: absolute;
  top: 30rpx;
  left: -6rpx;
  border-radius: 6rpx;
}

.upload-bar {
  width: 56rpx;
  height: 12rpx;
  background: #9333ea;
  border-radius: 6rpx;
  position: absolute;
  bottom: 8rpx;
  left: 20rpx;
}

.upload-title {
  font-size: 36rpx;
  font-weight: 600;
  letter-spacing: -0.02em;
  color: #111827;
  margin-bottom: 16rpx;
  display: block;
}

.upload-desc {
  font-size: 26rpx;
  color: #4b5563;
  margin-bottom: 48rpx;
  display: block;
}

.upload-buttons {
  display: flex;
  gap: 24rpx;
  justify-content: center;
  align-items: center;
}

.upload-btn {
  display: inline-flex !important;
  align-items: center !important;
  justify-content: center !important;
  gap: 12rpx !important;
  padding: 12rpx 32rpx !important;
  border-radius: 999rpx !important;
  font-size: 24rpx !important;
  font-weight: 500 !important;
  letter-spacing: 0.01em !important;
  height: 64rpx !important;
  border: none !important;
  color: inherit !important;
  font-family: 'SF Pro Display', 'PingFang SC', 'Helvetica Neue', sans-serif !important;
  transition: box-shadow 0.2s ease, transform 0.15s ease;
  box-shadow: 0 12rpx 24rpx rgba(15, 23, 42, 0.08) !important;
  flex-shrink: 0 !important;
}

.upload-btn:active {
  transform: translateY(2rpx);
}

.upload-btn.primary {
  background: linear-gradient(120deg, #a855f7 0%, #3b82f6 100%) !important;
  color: #ffffff !important;
  box-shadow: 0 16rpx 36rpx rgba(90, 116, 255, 0.35) !important;
}

.upload-btn.secondary {
  background: #ffffff !important;
  color: #a855f7 !important;
  border: 2rpx solid rgba(168, 85, 247, 0.5) !important;
  box-shadow: 0 12rpx 24rpx rgba(168, 85, 247, 0.15) !important;
}

.btn-icon {
  width: 40rpx !important;
  height: 40rpx !important;
  border-radius: 50% !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  background: rgba(255, 255, 255, 0.3) !important;
  box-shadow: inset 0 0 0 2rpx rgba(255, 255, 255, 0.4), 0 8rpx 16rpx rgba(15, 23, 42, 0.08) !important;
}

.btn-icon-inner {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.4));
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  box-shadow: inset 0 0 10rpx rgba(255, 255, 255, 0.4);
}

.upload-btn.secondary .btn-icon {
  background: rgba(233, 220, 255, 0.45);
  box-shadow: inset 0 0 0 2rpx rgba(168, 85, 247, 0.25), 0 8rpx 16rpx rgba(168, 85, 247, 0.12);
}

.upload-btn.secondary .btn-icon-inner {
  background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.98), rgba(255, 255, 255, 0.75));
  border-color: rgba(255, 255, 255, 0.85);
}

.btn-text {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: auto;
  color: inherit;
  text-align: center;
  white-space: nowrap;
}

.upload-btn.primary .btn-text {
  color: #ffffff !important;
}

.upload-btn.secondary .btn-text {
  color: #a855f7 !important;
}

.icon-camera,
.icon-album {
  position: relative;
  width: 24rpx;
  height: 18rpx;
}

.camera-top {
  width: 12rpx;
  height: 5rpx;
  border-radius: 3rpx;
  position: absolute;
  top: -5rpx;
  left: 6rpx;
  background: #e9d5ff;
}

.camera-body {
  width: 24rpx;
  height: 16rpx;
  border-radius: 8rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.9);
  background: rgba(255, 255, 255, 0.15);
}

.camera-lens {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.9);
  position: absolute;
  top: 4rpx;
  left: 8rpx;
  background: rgba(255, 255, 255, 0.25);
}

.icon-album {
  display: flex;
  align-items: center;
  justify-content: center;
}

.album-body {
  width: 24rpx;
  height: 14rpx;
  border-radius: 7rpx;
  border: 3rpx solid #d8b4fe;
  background: transparent;
}

.album-tab {
  width: 12rpx;
  height: 5rpx;
  border-radius: 3rpx;
  background: rgba(255, 255, 255, 0.5);
  position: absolute;
  top: -7rpx;
  left: 6rpx;
  border: 2rpx solid rgba(147, 51, 234, 0.35);
}

.album-dot {
  width: 4rpx;
  height: 4rpx;
  border-radius: 50%;
  background: #fde68a;
  position: absolute;
  top: 4rpx;
}

.album-dot.first {
  left: 6rpx;
}

.album-dot.second {
  left: 12rpx;
  background: #fb7185;
}

/* ÊèêÁ§∫Âç°Áâá */
.tips-card {
  background: #dbeafe;
  border-radius: 32rpx;
  padding: 32rpx;
  border: 2rpx solid #93c5fd;
}

.tips-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tips-icon {
  font-size: 40rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: -0.01em;
  color: #1e40af;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  font-size: 24rpx;
  color: #1e3a8a;
  line-height: 1.6;
}

/* È¢ÑËßàÂå∫Âüü */
.preview-section {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.preview-card {
  background: #ffffff;
  border-radius: 48rpx;
  padding: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.preview-image {
  width: 100%;
  height: 600rpx;
  border-radius: 32rpx;
  background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
  margin-bottom: 32rpx;
}

.preview-actions {
  display: flex;
  gap: 24rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  letter-spacing: 0.01em;
  height: 64rpx;
  line-height: 64rpx;
}

.action-btn.primary {
  background: linear-gradient(135deg, #a855f7 0%, #3b82f6 100%);
  color: #ffffff;
}

.action-btn.secondary {
  background: #f3f4f6;
  color: #374151;
}

/* ÂàÜÊûê‰∏≠ */
.analyzing-card {
  background: #ffffff;
  border-radius: 48rpx;
  padding: 64rpx 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.loading-spinner {
  width: 128rpx;
  height: 128rpx;
  border: 8rpx solid #e9d5ff;
  border-top-color: #9333ea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 32rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.analyzing-title {
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: -0.01em;
  color: #1f2937;
  margin-bottom: 16rpx;
  display: block;
}

.analyzing-desc {
  font-size: 24rpx;
  color: #6b7280;
}

/* ÁªìÊûúÂå∫Âüü */
.result-section {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.result-card {
  background: #ffffff;
  border-radius: 48rpx;
  padding: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.result-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: -0.01em;
  color: #1f2937;
}

.confidence-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.check-icon {
  font-size: 32rpx;
}

.confidence-text {
  font-size: 24rpx;
  color: #6b7280;
}

.confidence-bar {
  height: 16rpx;
  background: #f3f4f6;
  border-radius: 50rpx;
  overflow: hidden;
  margin-bottom: 48rpx;
}

.confidence-fill {
  height: 100%;
  background: linear-gradient(135deg, #a855f7 0%, #3b82f6 100%);
  border-radius: 50rpx;
  transition: width 1s;
}

.condition-card {
  border-radius: 32rpx;
  padding: 32rpx;
  border: 4rpx solid;
}

.condition-card.low {
  background: #f0fdf4;
  border-color: #86efac;
}

.condition-card.medium {
  background: #fffbeb;
  border-color: #fde047;
}

.condition-card.high {
  background: #fef2f2;
  border-color: #fca5a5;
}

.condition-title {
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: -0.01em;
  margin-bottom: 16rpx;
  display: block;
}

.condition-card.low .condition-title {
  color: #059669;
}

.condition-card.medium .condition-title {
  color: #d97706;
}

.condition-card.high .condition-title {
  color: #dc2626;
}

.condition-desc {
  font-size: 24rpx;
  color: #374151;
  line-height: 1.6;
}

/* Âª∫ËÆÆÊé™ÊñΩ */
.recommendations-card {
  background: #ffffff;
  border-radius: 48rpx;
  padding: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.recommendations-title {
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: -0.01em;
  color: #1f2937;
  margin-bottom: 32rpx;
  display: block;
}

.recommendations-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.recommendation-item {
