/* pages/diagnosis/diagnosis.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f0fdf4 0%, #ecfdf5 100%);
  padding: 32rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  padding-top: 40rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #6b7280;
  text-align: center;
}

.form-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background-color: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1f2937;
  box-sizing: border-box;
}

.input:focus {
  border-color: #10b981;
  background-color: #ffffff;
}

.textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  background-color: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1f2937;
  box-sizing: border-box;
}

.textarea:focus {
  border-color: #10b981;
  background-color: #ffffff;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 8rpx;
}

.btn-submit {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #10b981;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 16rpx;
  margin-top: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
}

.btn-submit:active {
  background-color: #059669;
}

.btn-submit[disabled] {
  background-color: #d1d5db;
  box-shadow: none;
}

.btn-loading {
  opacity: 0.7;
}

.result-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  border-left: 6rpx solid #10b981;
}

.result-header {
  display: flex;
  flex-direction: column;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #e5e7eb;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.result-notice {
  font-size: 24rpx;
  color: #f59e0b;
}

.result-content {
  display: flex;
  flex-direction: column;
}

.result-text {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.8;
  margin-bottom: 24rpx;
}

.result-confidence {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #f0fdf4;
  border-radius: 12rpx;
}

.confidence-label {
  font-size: 26rpx;
  color: #6b7280;
  margin-right: 8rpx;
}

.confidence-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #10b981;
}

.error-card {
  background-color: #fef2f2;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  border-left: 6rpx solid #ef4444;
  display: flex;
  align-items: center;
}

.error-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.error-text {
  flex: 1;
  font-size: 28rpx;
  color: #dc2626;
  line-height: 1.6;
}

.action-bar {
  display: flex;
  justify-content: center;
  margin-top: 32rpx;
}

.btn-clear {
  width: 200rpx;
  height: 72rpx;
  line-height: 72rpx;
  background-color: #ffffff;
  color: #6b7280;
  font-size: 28rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
}

.btn-clear:active {
  background-color: #f9fafb;
}


