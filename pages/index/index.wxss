/* pages/index/index.wxss */
.page {
  min-height: 100vh;
  padding-bottom: 160rpx;
  background: linear-gradient(135deg, #a855f7 0%, #9333ea 50%, #3b82f6 100%);
}

.gradient-bg {
  background: linear-gradient(135deg, #a855f7 0%, #9333ea 50%, #3b82f6 100%);
}

/* 头部区域 */
.header-section {
  padding: 96rpx 40rpx 48rpx;
}

.user-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 48rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.user-name {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: -0.02em;
  display: block;
}

.user-subtitle {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  display: block;
  margin-bottom: 4rpx;
  font-weight: 400;
}

.bell-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

/* 搜索框 */
.search-bar {
  position: relative;
  background: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx 32rpx 32rpx 96rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  position: absolute;
  left: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 40rpx;
  color: #9ca3af;
}

.search-input {
  width: 100%;
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 400;
  letter-spacing: 0.01em;
}

.search-input::placeholder {
  color: #9ca3af;
  font-size: 28rpx;
  font-weight: 400;
}

/* AI诊断卡片 */
.ai-diagnosis-card {
  padding: 0 40rpx 48rpx;
}

.card-bg {
  background: linear-gradient(135deg, #f472b6 0%, #ec4899 100%);
  border-radius: 48rpx;
  padding: 48rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(244, 114, 182, 0.3);
}

.card-bg::before {
  content: '';
  position: absolute;
  right: -64rpx;
  top: -64rpx;
  width: 256rpx;
  height: 256rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.card-bg::after {
  content: '';
  position: absolute;
  right: 96rpx;
  bottom: -64rpx;
  width: 192rpx;
  height: 192rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.card-content {
  position: relative;
  z-index: 10;
}

.card-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.title-icon {
  font-size: 40rpx;
  line-height: 1;
  display: block;
}

.title-text {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: -0.01em;
}

.card-desc {
  color: rgba(255, 255, 255, 0.9);
  font-size: 24rpx;
  margin-bottom: 32rpx;
  display: block;
}

.start-btn {
  background: #ffffff !important;
  color: #ec4899 !important;
  border-radius: 50rpx !important;
  padding: 20rpx 48rpx !important;
  font-size: 28rpx !important;
  font-weight: 500 !important;
  letter-spacing: 0.01em !important;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1) !important;
  height: 56rpx !important;
  line-height: 56rpx !important;
  min-width: 140rpx !important;
  margin: 0 !important;
  border: none !important;
  box-sizing: border-box !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

.start-btn::after {
  border: none !important;
}

/* 快捷服务 */
.quick-services {
  padding: 0 40rpx 48rpx;
}

.section-title {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: -0.01em;
  margin-bottom: 32rpx;
  display: block;
}

.services-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 32rpx;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.service-icon {
  width: 128rpx;
  height: 128rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.service-icon-text {
  font-size: 64rpx;
  line-height: 1;
  display: block;
}

.service-icon.blue {
  background: #3b82f6;
}

.service-icon.green {
  background: #10b981;
}

.service-icon.orange {
  background: #f97316;
}

.service-icon.purple {
  background: #9333ea;
}

.service-text {
  color: #ffffff;
  font-size: 24rpx;
}

/* 我的宠物 */
.my-pets {
  padding: 0 40rpx 48rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.add-btn, .more-btn {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

.pets-scroll {
  white-space: nowrap;
  overflow: visible;
}

.pets-list {
  display: flex;
  gap: 24rpx;
  overflow: visible;
}

.pet-card {
  flex-shrink: 0;
  width: 210rpx;
  background: #ffffff;
  border-radius: 30rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: visible;
  box-sizing: border-box;
}

.pet-emoji {
  font-size: 76rpx;
  margin-bottom: 16rpx;
  text-align: center;
  line-height: 1;
  display: block;
}

.pet-name {
  text-align: center;
  color: #1f2937;
  font-size: 28rpx;
  margin-bottom: 8rpx;
  font-weight: 600;
  letter-spacing: -0.01em;
  display: block;
}

.pet-info {
  text-align: center;
  color: #6b7280;
  font-size: 20rpx;
  display: block;
}

.add-pet {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border: 4rpx dashed rgba(255, 255, 255, 0.4);
  overflow: visible;
  min-height: auto;
}

.add-icon {
  font-size: 64rpx;
  color: #ffffff;
  margin-bottom: 16rpx;
  line-height: 1;
  display: block;
  width: 100%;
  text-align: center;
}

.add-text {
  color: #ffffff;
  font-size: 24rpx;
  display: block;
}

/* 健康小贴士 */
.health-tips {
  padding: 0 40rpx 48rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.tip-item {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 24rpx;
}

.tip-icon {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #fed7aa 0%, #fdba74 100%);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  flex-shrink: 0;
}

.tip-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
}

.tip-title {
  color: #1f2937;
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: -0.01em;
  margin-bottom: 8rpx;
  display: block;
}

.tip-desc {
  color: #6b7280;
  font-size: 24rpx;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.tip-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.tip-time {
  color: #9ca3af;
  font-size: 20rpx;
}

/* 在线医生 */
.online-doctors {
  padding: 0 40rpx 48rpx;
}

.doctors-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.doctor-card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  gap: 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.doctor-avatar {
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #dbeafe 0%, #e9d5ff 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  flex-shrink: 0;
}

.doctor-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.doctor-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.doctor-name {
  color: #1f2937;
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: -0.01em;
}

.doctor-status {
  background: #d1fae5;
  color: #059669;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.doctor-specialty {
  color: #6b7280;
  font-size: 24rpx;
  margin-bottom: 16rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.doctor-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stars {
  font-size: 24rpx;
}

.rating-text {
  color: #6b7280;
  font-size: 20rpx;
}

.consult-btn {
  background: #9333ea !important;
  color: #ffffff !important;
  border-radius: 12rpx !important;
  padding: 12rpx 24rpx !important;
  font-size: 26rpx !important;
  flex-shrink: 0;
  min-width: 100rpx !important;
  width: auto !important;
  height: 56rpx !important;
  line-height: 56rpx !important;
  margin: 0 !important;
  border: none !important;
  box-sizing: border-box !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  font-weight: 500 !important;
  letter-spacing: 0.01em !important;
  vertical-align: middle !important;
}

.consult-btn::after {
  border: none !important;
  width: 0 !important;
  height: 0 !important;
}

.consult-btn:active {
  background: #7e22ce !important;
  opacity: 0.9 !important;
}
