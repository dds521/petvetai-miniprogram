/* pages/profile/profile.wxss */
.page {
  min-height: 100vh;
  background: linear-gradient(135deg, #a855f7 0%, #9333ea 50%, #3b82f6 100%);
  padding-bottom: 40rpx;
  padding-left: 0 !important;
  padding-right: 0 !important;
  margin-left: 0 !important;
  margin-right: 0 !important;
  box-sizing: border-box !important;
  width: 100% !important;
}

/* Header */
.header {
  padding: 96rpx 40rpx 64rpx !important;
}

.profile-info {
  display: flex !important;
  align-items: center !important;
  gap: 32rpx !important;
  margin-bottom: 48rpx !important;
}

.avatar-wrapper {
  width: 160rpx !important;
  height: 160rpx !important;
  background: #ffffff !important;
  border-radius: 50% !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  flex-shrink: 0 !important;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1) !important;
}

.avatar-emoji {
  font-size: 80rpx !important;
}

.user-details {
  flex: 1 !important;
}

.user-name {
  display: block !important;
  font-size: 36rpx !important;
  font-weight: 600 !important;
  letter-spacing: -0.01em !important;
  color: #ffffff !important;
  margin-bottom: 8rpx !important;
}

.user-id {
  font-size: 28rpx !important;
  color: rgba(255, 255, 255, 0.8) !important;
}

.edit-btn {
  padding: 16rpx 24rpx !important;
  background: rgba(255, 255, 255, 0.2) !important;
  backdrop-filter: blur(16rpx) !important;
  color: #ffffff !important;
  border-radius: 50rpx !important;
  font-size: 28rpx !important;
  font-weight: 400 !important;
  letter-spacing: 0.01em !important;
  border: none !important;
  height: auto !important;
  line-height: normal !important;
  display: inline-flex !important;
  align-items: center !important;
  justify-content: center !important;
  min-width: auto !important;
  width: auto !important;
}

.edit-btn::after {
  border: none !important;
  width: 0 !important;
  height: 0 !important;
}

/* Stats */
.stats-grid {
  display: grid !important;
  grid-template-columns: repeat(3, 1fr) !important;
  gap: 24rpx !important;
}

.stat-item {
  background: rgba(255, 255, 255, 0.2) !important;
  backdrop-filter: blur(16rpx) !important;
  border-radius: 32rpx !important;
  padding: 32rpx !important;
  text-align: center !important;
  box-sizing: border-box !important;
}

.stat-icon {
  display: block !important;
  font-size: 48rpx !important;
  margin-bottom: 16rpx !important;
}

.stat-value {
  display: block !important;
  font-size: 32rpx !important;
  font-weight: 600 !important;
  letter-spacing: -0.01em !important;
  color: #ffffff !important;
  margin-bottom: 8rpx !important;
}

.stat-label {
  font-size: 24rpx !important;
  color: rgba(255, 255, 255, 0.7) !important;
}

.page .content {
  display: flex !important;
  flex-direction: column !important;
  padding-left: 32rpx !important;
  padding-right: 32rpx !important;
  padding-top: 0 !important;
  padding-bottom: 0 !important;
  margin-top: -32rpx !important;
  margin-left: 0 !important;
  margin-right: 0 !important;
  max-width: 100% !important;
  box-sizing: border-box !important;
  align-items: stretch !important;
}

/* VIP Card */
.page .content .vip-card,
.page .vip-card,
.content .vip-card,
.vip-card {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%) !important;
  border-radius: 48rpx !important;
  padding: 48rpx !important;
  box-shadow: 0 8rpx 24rpx rgba(245, 158, 11, 0.3) !important;
  margin-left: 0 !important;
  margin-right: 0 !important;
  margin-bottom: 24rpx !important;
  margin-top: 0 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: space-between !important;
  box-sizing: border-box !important;
  width: 100% !important;
}

.vip-icon {
  font-size: 48rpx !important;
  margin-right: 16rpx !important;
}

.vip-title {
  display: flex !important;
  align-items: center !important;
  margin-bottom: 16rpx !important;
}

.vip-name {
  font-size: 32rpx !important;
  font-weight: 600 !important;
  letter-spacing: -0.01em !important;
  color: #ffffff !important;
}

.vip-desc {
  font-size: 28rpx !important;
  color: rgba(255, 255, 255, 0.9) !important;
}

.upgrade-btn {
  padding: 20rpx 32rpx !important;
  background: #ffffff !important;
  color: #d97706 !important;
  border-radius: 50rpx !important;
  font-size: 32rpx !important;
  font-weight: 500 !important;
  letter-spacing: 0.01em !important;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1) !important;
  flex-shrink: 0 !important;
  border: none !important;
  height: auto !important;
  line-height: normal !important;
  display: inline-flex !important;
  align-items: center !important;
  justify-content: center !important;
  min-width: auto !important;
  width: auto !important;
}

.upgrade-btn::after {
  border: none !important;
  width: 0 !important;
  height: 0 !important;
}

/* Menu List */
.page .content .menu-list,
.page .menu-list,
.content .menu-list,
.menu-list {
  background: #ffffff !important;
  border-radius: 48rpx !important;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08) !important;
  margin-left: 0 !important;
  margin-right: 0 !important;
  margin-bottom: 24rpx !important;
  margin-top: 0 !important;
  overflow: hidden !important;
  box-sizing: border-box !important;
  width: 100% !important;
}

.menu-item {
  display: flex !important;
  align-items: center !important;
  gap: 32rpx !important;
  padding: 32rpx 40rpx !important;
  border-bottom: 2rpx solid #f3f4f6 !important;
}

.menu-item:last-child {
  border-bottom: none !important;
}

.menu-icon-wrapper {
  width: 80rpx !important;
  height: 80rpx !important;
  border-radius: 24rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  flex-shrink: 0 !important;
}

.menu-icon {
  font-size: 40rpx !important;
  line-height: 1 !important;
  display: block !important;
}

.menu-label {
  flex: 1 !important;
  font-size: 30rpx !important;
  font-weight: 400 !important;
  letter-spacing: 0.01em !important;
  color: #1f2937 !important;
}

.arrow-icon {
  font-size: 32rpx !important;
  color: #9ca3af !important;
  flex-shrink: 0 !important;
}

/* Logout Button */
.page .content .logout-btn,
.page .logout-btn,
.content .logout-btn,
.logout-btn {
  width: 100% !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  gap: 16rpx !important;
  padding: 32rpx 0 !important;
  background: #ffffff !important;
  border-radius: 32rpx !important;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08) !important;
  margin-left: 0 !important;
  margin-right: 0 !important;
  margin-bottom: 0 !important;
  margin-top: 0 !important;
  border: none !important;
  box-sizing: border-box !important;
}

.logout-btn::after {
  border: none !important;
  width: 0 !important;
  height: 0 !important;
}

.logout-icon {
  font-size: 32rpx !important;
}

.logout-text {
  font-size: 30rpx !important;
  font-weight: 500 !important;
  letter-spacing: 0.01em !important;
  color: #ef4444 !important;
}

.version-text {
  display: block !important;
  text-align: center !important;
  font-size: 24rpx !important;
  color: rgba(255, 255, 255, 0.6) !important;
  margin-top: 32rpx !important;
}

/* Icon Colors */
.bg-red-50 { background-color: #fef2f2; }
.text-red-500 { color: #ef4444; }
.bg-blue-50 { background-color: #eff6ff; }
.text-blue-500 { color: #3b82f6; }
.bg-green-50 { background-color: #f0fdf4; }
.text-green-500 { color: #22c55e; }
.bg-purple-50 { background-color: #faf5ff; }
.text-purple-500 { color: #a855f7; }
.bg-yellow-50 { background-color: #fefce8; }
.text-yellow-500 { color: #eab308; }
.bg-gray-50 { background-color: #f9fafb; }
.text-gray-500 { color: #6b7280; }
.bg-indigo-50 { background-color: #eef2ff; }
