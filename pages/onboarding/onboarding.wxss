/* pages/onboarding/onboarding.wxss */
.onboarding-page {
  width: 100%;
  height: 100vh;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* 跳过按钮 */
.skip-btn {
  position: absolute;
  top: 96rpx;
  right: 40rpx;
  z-index: 100;
  padding: 16rpx 24rpx;
}

.skip-text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  font-weight: 400;
}

/* Swiper容器 */
.onboarding-swiper {
  flex: 1;
  width: 100%;
  height: 100%;
  transition: all 0.3s ease;
}

.swiper-item {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 第一页：蓝色背景 */
.swiper-item.page-blue {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
}

/* 第二页：紫色背景 */
.swiper-item.page-purple {
  background: linear-gradient(135deg, #a855f7 0%, #9333ea 100%);
}

/* 第三页：粉色背景 */
.swiper-item.page-pink {
  background: linear-gradient(135deg, #ec4899 0%, #db2777 100%);
}

/* 内容区域 */
.onboarding-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 40rpx;
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 图标容器 */
.icon-container {
  margin-bottom: 80rpx;
  animation: scaleIn 0.8s ease-out;
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.8) translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.icon-wrapper {
  width: 240rpx;
  height: 240rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
  transition: transform 0.3s ease;
  animation: float 3s ease-in-out infinite;
  position: relative;
}

/* 医院图标：浮动 + 脉冲光晕 */
@keyframes floatHospital {
  0%, 100% {
    transform: translateY(0) scale(1);
    box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2), 0 0 0 0 rgba(59, 130, 246, 0.3);
  }
  50% {
    transform: translateY(-20rpx) scale(1.02);
    box-shadow: 0 20rpx 56rpx rgba(0, 0, 0, 0.25), 0 0 0 16rpx rgba(59, 130, 246, 0);
  }
}

/* 机器人图标：浮动 + 轻微旋转 */
@keyframes floatRobot {
  0%, 100% {
    transform: translateY(0) rotate(0deg) scale(1);
  }
  25% {
    transform: translateY(-18rpx) rotate(3deg) scale(1.02);
  }
  75% {
    transform: translateY(-18rpx) rotate(-3deg) scale(1.02);
  }
}

/* 爱心图标：心跳效果 */
@keyframes floatHeart {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  15% {
    transform: translateY(-12rpx) scale(1.08);
  }
  30% {
    transform: translateY(0) scale(1);
  }
  45% {
    transform: translateY(-12rpx) scale(1.08);
  }
  60% {
    transform: translateY(0) scale(1);
  }
  75% {
    transform: translateY(-20rpx) scale(1.03);
  }
}

.icon-emoji {
  font-size: 120rpx;
  line-height: 1;
  display: block;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
  animation: iconBounce 2s ease-in-out infinite;
}

@keyframes iconBounce {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

/* 文字容器 */
.text-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  text-align: center;
}

.main-title {
  color: #ffffff;
  font-size: 48rpx;
  font-weight: 600;
  letter-spacing: -0.02em;
  display: block;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.sub-title {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 400;
  letter-spacing: 0.01em;
  display: block;
  opacity: 0.95;
}

.desc-text {
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  font-weight: 400;
  letter-spacing: 0.01em;
  display: block;
  opacity: 0.85;
}

/* 指示器 */
.indicator-container {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 40rpx 0;
  position: absolute;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%);
}

.indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.indicator.active {
  width: 48rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: #ffffff;
}

/* 按钮容器 */
.button-container {
  position: absolute;
  bottom: 80rpx;
  left: 0;
  right: 0;
  padding: 0 40rpx;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
}

.next-btn {
  width: 100%;
  height: 88rpx;
  background: #ffffff !important;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: none !important;
  padding: 0 !important;
  margin: 0 !important;
  box-sizing: border-box;
}

.next-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.btn-text {
  color: #9333ea;
  font-size: 30rpx;
  font-weight: 500;
  letter-spacing: 0.01em;
  line-height: 1;
  display: block;
}

.next-btn::after {
  border: none !important;
  width: 0 !important;
  height: 0 !important;
}

