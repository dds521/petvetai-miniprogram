/**app.wxss**/
/* 全局样式 */
view,
text,
image,
scroll-view,
swiper,
button,
input,
textarea,
label,
form,
navigator,
video,
cover-view,
cover-image {
  box-sizing: border-box;
}

page {
  background-color: #f5f5f5;
  /* 优化字体栈，与 React 项目保持一致 */
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', 'Arial', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', '微软雅黑', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';
  /* 基础字体大小：32rpx = 16px */
  font-size: 32rpx;
  /* 行高：1.5，与 React 项目一致 */
  line-height: 1.5;
  /* 字体平滑渲染，提升显示效果 */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  /* 字体渲染优化 */
  text-rendering: optimizeLegibility;
}

/* 重置 button 默认样式 */
button {
  padding: 0 !important;
  margin: 0 !important;
  border: none !important;
  background: transparent !important;
  font-size: inherit !important;
  line-height: normal !important; /* Changed to normal */
  box-sizing: border-box !important;
  display: inline-flex !important;
  align-items: center !important;
  justify-content: center !important;
  font-weight: inherit !important;
  color: inherit !important;
}

button::after {
  border: none !important;
  width: 0 !important;
  height: 0 !important;
}

/* 重置 input 默认样式 */
input {
  padding: 0 !important;
  margin: 0 !important;
  border: none !important;
  background: transparent !important;
  font-size: inherit !important;
  line-height: inherit !important;
  box-sizing: border-box !important;
  outline: none !important;
  -webkit-appearance: none !important;
  appearance: none !important;
  height: auto !important;
  min-height: auto !important;
  width: auto !important;
}

/* 重置 text 标签默认样式 */
text {
  display: inline-block;
  font-size: inherit;
  font-weight: inherit;
  color: inherit;
  line-height: inherit;
}

/* 渐变背景 */
.gradient-bg {
  background: linear-gradient(135deg, #a855f7 0%, #9333ea 50%, #3b82f6 100%);
}

/* 通用按钮样式 */
.btn-primary {
  background-color: #9333ea;
  color: #ffffff;
  border-radius: 8rpx;
}

.btn-primary:active {
  background-color: #7e22ce;
}

/* 通用卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 通用容器 */
.container {
  min-height: 100vh;
  padding-bottom: 160rpx;
}


